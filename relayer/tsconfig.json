{
  "compilerOptions": {
    "outDir": "./dist",
    "allowJs": false,
    "target": "ES2020",
    "noImplicitAny": true,
    "skipLibCheck": true,
    "strict": true,
    "moduleResolution": "node",
    "module": "commonjs",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true
  },
  "include": ["./src/**/*"]
}
